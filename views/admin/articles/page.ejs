<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/homenavbar.ejs')%>

    <br>
    <div class="container">
        <br>
        <% result.articles.rows.forEach((article) => { %>

            <div class="card">

                <div class="card-header" style="background-color: #e9ecef">
                    <p class="h5";"> <%= article.title %> </p>
                </div>

                <div class="card-body">
                    <a class="btn btn-info" href="/<%= article.slug %>">Ler artigo</a>
                </div>

            </div>
            <br>
        <% }) %>


        <div>
            <div class="col col-12 text-center">
                <% if(result.page > 2) { %>
                    <a href="/articles/page/<%= result.page - 1%>" style="float: left;"> << Anterior </a>

                <% } else if (result.page == 2) { %>
                    <a href="/" style="float: left;"> << Anterior </a>

                <% } %>

                <% if(result.next) { %>
                    <a href="/articles/page/<%= result.page + 1 %>" style="float: right;"> Proxima >> </a><br>

                <% } %>
            </div>
        </div>
        <br>
    </div>

</body>
<%- include ('../../partials/footer.ejs') %>