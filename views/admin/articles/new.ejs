<%- include ('../../partials/header.ejs') %>

    <body>
        <%- include ('../../partials/navbar.ejs')%>

            <div class="container">
                <br>
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Novo artigo</h2>
                    </div>

                    <div class="card-body">
                        <form method="post" action="/articles/save" class="form-group">
                            <label>Cadastre o artigo</label>
                            <input class="form-control" type="text" name="title" placeholder="Digite o titulo do artigo">
                            <br>
                            <textarea class="form-control" placeholder="Escreva o seu artigo aqui! ðŸ˜‰" name="body" id="article"></textarea>
                            <br>
                            <label>Escolha a categoria</label>
                            <select name="category" class="form-control">
                                <% categories.forEach((category) => { %>
                                    <option value="<%= category.id %>"> <%= category.title %></option>
                                <% }) %>
                            </select>
                            <br>
                            <button class="btn btn-success">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
    </body>
    <%- include ('../../partials/footer.ejs') %>
        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            // Configurando o tinyMCE
            tinymce.init({
                selector: "#article",
                branding: false,
                plugins: [
                    'advlist',
                    'autolink',
                    'link',
                    'image',
                    'preview',
                    'wordcount',
                    'fullscreen',
                    'insertdatetime',
                    'media',
                    'save',
                    'table',
                    'paste',
                    'emoticons'
                ],
                language: 'pt_BR'
            });
        </script>